{# -*- coding: utf-8 -*- #}

{% import 'feeds_translations_helper.tmpl' as feeds_translations with context %}
{% extends 'base.tmpl' %}

{% block main_content %}
<div class="authorpage page-body">
    <div class="author-title">
        {{ title|e }}
    </div>
    <div class="author-description">
        {% if description %}
            <p>{{ description }}</p>
        {% endif %}
    </div>
    <div class="author-rssfeed">
        {{ feeds_translations.feed_link(author) }}
    </div>
    {% if posts %}
    <div class="author-postlist">
        <ul>
            {% for post in posts %}
            <li>
                <a href="{{ post.permalink() }}" class="listtitle">{{ post.title()|e }}</a>
                <time class="listdate" datetime="{{ post.formatted_date('webiso') }}" title="{{ post.formatted_date(date_format)|e }}">{{ post.formatted_date(date_format)|e }}</time>
            </li>
            {% endfor %}
        </ul>
    </div>
    {% endif %}
</div>
{% endblock main_content %}
