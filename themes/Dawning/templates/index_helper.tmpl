{# -*- coding: utf-8 -*- #}

{% macro page_navigation(current_page, page_links, prevlink, nextlink, prev_next_links_reversed, surrounding=5) %}
<div class="page-navigation">
    <ul class="pagination">
    {% if prevlink %}
    <li><a href="{{ prevlink }}"><</a></li>
    {% else %}
    <li class="disabled"><a href="#"><</a></li>
    {% endif %}
    {% for i, link in enumerate(page_links) %}
        {% if (i - current_page)|abs <= surrounding or i == 0 or i == page_links|length - 1 %}
            {% if i == current_page %}
                <li class="active"><a href="{{ page_links[i] }}">{{ i+1 }}</a></li>
            {% else %}
                <li class="waves-effect"><a href="{{ page_links[i] }}">{{ i+1 }}</a></li>
            {% endif %}
        {% elif i == current_page - surrounding - 1 or i == current_page + surrounding + 1 %}
            <li class="ellipsis"><a href="#">â€¦</a></li>
        {% endif %}
    {% endfor %}
    {% if nextlink %}
    <li><a href="{{ nextlink }}">></a></li>
    {% else %}
    <li class="disabled"><a href="#">></a></li>
    {% endif %}
    </ul>
</div>
{% endmacro %}
